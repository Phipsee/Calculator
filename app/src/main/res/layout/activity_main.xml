<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="at.calc.philipp.calculator.MainActivity">

    <TextView
        android:id="@+id/label_divisor"
        android:layout_width="87dp"
        android:layout_height="31dp"
        android:text="Divisor"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="67dp"
        app:layout_constraintTop_toBottomOf="@+id/label_dividend" />

    <EditText
        android:id="@+id/input_dividend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/label_dividend"
        android:layout_marginLeft="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="105dp" />

    <EditText
        android:id="@+id/input_divisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number|numberSigned|numberDecimal"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/label_divisor"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="43dp"
        app:layout_constraintTop_toBottomOf="@+id/input_dividend"
        app:layout_constraintHorizontal_bias="0.516" />

    <TextView
        android:id="@+id/label_dividend"
        android:layout_width="87dp"
        android:layout_height="31dp"
        android:text="Dividend"
        android:textSize="18sp"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="105dp" />

    <Button
        android:id="@+id/btn_divide"
        android:layout_width="199dp"
        android:layout_height="47dp"
        android:text="Dividiere"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="283dp"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/label_result"
        android:layout_width="70dp"
        android:layout_height="35dp"
        android:text="Ergebnis"
        android:textSize="18sp"
        android:visibility="invisible"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/input_result"
        android:layout_marginRight="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="409dp"
        app:layout_constraintHorizontal_bias="0.567" />

    <EditText
        android:id="@+id/input_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="none"
        android:visibility="invisible"
        android:layout_marginRight="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="401dp" />
</android.support.constraint.ConstraintLayout>
